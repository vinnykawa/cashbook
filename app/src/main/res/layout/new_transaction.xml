<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            >

            <EditText
                android:id="@+id/ed_trans_acc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Add New Account"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <requestFocus />
            </EditText>

            <ImageButton
                android:id="@+id/btn_add_new_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/add_new"
                android:scaleType="centerInside" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                />

            <EditText
                android:id="@+id/ed_trans_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Amount"
                android:inputType="phone"
                android:background="@drawable/custom_input"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <TextView
                android:id="@+id/txt_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on 2015-1-1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <CheckBox
                android:id="@+id/check_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due Reminder"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/txt_reminder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="on 2015-1-1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>

        <EditText
            android:id="@+id/ed_trans_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Note"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >

                <Button
                    android:id="@+id/btn_trans_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Cancel"
                    android:background="@drawable/custom_button"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    />

                <Button
                    android:id="@+id/btn_debit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="Debit"
                    android:background="@drawable/custom_button_debit"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    />

                <Button
                    android:id="@+id/btn_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/btn_debit"
                    android:text="Credit"
                    android:background="@drawable/custom_button_credit"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



</androidx.cardview.widget.CardView>